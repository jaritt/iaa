<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>
    <field name="name">
        <field-validator type="requiredstring">
            <message key="error.fieldRequired"/>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">2</param>
            <param name="maxLength">50</param>
            <message key="error.inputLength"/>
        </field-validator>
    </field>
    <field name="firstName">
        <field-validator type="requiredstring">
            <message key="error.fieldRequired"/>
        </field-validator>
    </field>
    <field name="city">
        <field-validator type="requiredstring">
            <message key="error.fieldRequired"/>
        </field-validator>
    </field>
    <field name="street">
        <field-validator type="requiredstring">
            <message key="error.fieldRequired"/>
        </field-validator>
        <field-validator type="regex">
            <param name="regexExpression">^(([a-zA-ZäÄöÖüÜ]+)((-)|(\s)))+(\d{1,})(\w{0,1})$</param>
            <message key="error.customerAddressFormat"/>
        </field-validator>
    </field>
    <field name="matnr">
        <field-validator type="regex">
            <param name="regexExpression">(\d{4,})</param>
            <message key="error.customerMatnrFormat"/>
        </field-validator>
    </field>
</validators>