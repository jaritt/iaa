<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="Lending" extends="tiles-default">

        <action name="showLendingList" class="de.nordakademie.iaa.library.action.ShowLendingListAction">
            <result type="tiles">lendingList</result>
        </action>

        <action name="showLendingCreateForm" class="de.nordakademie.iaa.library.action.LendingAction" method="load">
            <result type="tiles">lendingCreateForm</result>
        </action>

        <action name="showLending" class="de.nordakademie.iaa.library.action.LendingAction" method="load">
            <result type="tiles">lendingShowForm</result>
            <!--<result name="input" type="chain">showLendingList</result>-->
        </action>

        <action name="lendPublication" class="de.nordakademie.iaa.library.action.LendingAction" method="save">
            <result name="success" type="redirectAction">
                <param name="actionName">showLending</param>
                <param name="publicationId">${publication.Id}</param>
            </result>
           <!-- <result name="input" type="chain">showLending</result>-->
        </action>

        <action name="sendCustomerId" class="de.nordakademie.iaa.library.action.LendingAction">
            <result name="success" type="redirectAction">
                <param name="actionName">showCustomer</param>
                <param name="customerId">${customer.Id}</param>
            </result>
        </action>

    </package>
</struts>

