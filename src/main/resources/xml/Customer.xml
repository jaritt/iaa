        <action name="sendCustomerId" class="de.nordakademie.iaa.library.action.CustomerAction">
            <result name="success" type="redirectAction">
                <param name="actionName">showCustomer</param>
                <param name="customerId">${lending.customerId}</param>
            </result>
        </action>
-->
    </package>
</struts>